

<div class="modal fade" id="createModalShow" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLongTitle">Ürün Ekle</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">

				<form>
					<p v-if="error.length">
						<ul>
							<li v-for="error in error"><div class="text-danger">{{error}}</div></li>
						</ul>
					</p>
					<div class="form-group">
						<label for="name">Ürün Adı</label>
						<input v-model="name" id="name" type="text" class="form-control">
					</div>

					<div class="form">
						<label for="lastName">Resim Bağlantisi</label>
						<input v-model="urlphoto" typeof="url" class="form-control" />
					</div>

					<div class="form-group">
						<label for="lastName">Ürün Açıklama</label>
						<textarea v-model="description" type="text" class="form-control"></textarea>
					</div>
					<div class="form-group">
						<label for="lastName">Ürün Fiyatı</label>
						<input v-model.number="price" type="number" class="form-control">
					</div>
				</form>


				
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-danger" data-dismiss="modal">Kapat</button>

				<button type="button" class="btn btn-primary" v-on:click="addProduct" >Kaydet</button>
			</div>


		</div>
	</div>
</div>

